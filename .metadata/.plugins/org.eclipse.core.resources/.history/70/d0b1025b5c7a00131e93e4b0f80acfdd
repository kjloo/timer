import javax.swing.JPanel;

import net.miginfocom.swing.MigLayout;


public class ClockPanel extends JPanel{
	
	//Create Displays
	private SevenSegmentDisplay secondsOneDisplay = new SevenSegmentDisplay();
	private SevenSegmentDisplay secondsTenDisplay = new SevenSegmentDisplay();
	private SevenSegmentDisplay minutesOneDisplay = new SevenSegmentDisplay();
	private SevenSegmentDisplay minutesTenDisplay = new SevenSegmentDisplay();
	private SevenSegmentDisplay hoursOneDisplay = new SevenSegmentDisplay();
	private SevenSegmentDisplay hoursTenDisplay = new SevenSegmentDisplay();
	private SevenSegmentDisplay daysOneDisplay = new SevenSegmentDisplay();
	private SevenSegmentDisplay daysTenDisplay = new SevenSegmentDisplay();
	
	public ClockPanel() {
		//Set Layout
		setLayout(new MigLayout("debug", "[] [] 20 [] [] 20 [] [] 20 [] []", "[] 20 []"));
		add(daysTenDisplay, "cell 0 0 1 10, grow, wrap");
		add(daysOneDisplay, "cell 1 0 1 10, grow, wrap");
		add(hoursTenDisplay, "cell 2 0 1 10, grow, wrap");
		add(hoursOneDisplay, "cell 3 0 1 10, grow, wrap");
		add(minutesTenDisplay, "cell 4 0 1 10, grow, wrap");
		add(minutesOneDisplay, "cell 5 0 1 10, grow, wrap");
		add(secondsTenDisplay, "cell 6 0 1 10, grow, wrap");
		add(secondsOneDisplay, "cell 7 0 1 10, grow, wrap");
	}
	
	public void setDisplay(int secondsCount, int minutesCount, int hoursCount, int daysCount) {
		secondsOneDisplay.changeNumber(secondsCount % 10);
		secondsTenDisplay.changeNumber(secondsCount / 10);
		minutesOneDisplay.changeNumber(minutesCount % 10);
		minutesTenDisplay.changeNumber(minutesCount / 10);
		hoursOneDisplay.changeNumber(hoursCount % 10);
		hoursTenDisplay.changeNumber(hoursCount / 10);
		daysOneDisplay.changeNumber(daysCount % 10);
		daysTenDisplay.changeNumber(daysCount / 10);
	}
	
	public void fallInDisplay(int secondsCount, int minutesCount, int hoursCount, int daysCount) {
		secondsOneDisplay.fallInNumber(secondsCount % 10);
		secondsTenDisplay.fallInNumber(secondsCount / 10);
		minutesOneDisplay.fallInNumber(minutesCount % 10);
		minutesTenDisplay.fallInNumber(minutesCount / 10);
		hoursOneDisplay.fallInNumber(hoursCount % 10);
		hoursTenDisplay.fallInNumber(hoursCount / 10);
		daysOneDisplay.fallInNumber(daysCount % 10);
		daysTenDisplay.fallInNumber(daysCount / 10);
	}

	public void fallOutDisplay(int secondsCount, int minutesCount, int hoursCount, int daysCount) {
		secondsOneDisplay.fallOutNumber(secondsCount % 10);
		secondsTenDisplay.fallOutNumber(secondsCount / 10);
		minutesOneDisplay.fallOutNumber(minutesCount % 10);
		minutesTenDisplay.fallOutNumber(minutesCount / 10);
		hoursOneDisplay.fallOutNumber(hoursCount % 10);
		hoursTenDisplay.fallOutNumber(hoursCount / 10);
		daysOneDisplay.fallOutNumber(daysCount % 10);
		daysTenDisplay.fallOutNumber(daysCount / 10);
	}
	
	public void fall() {
		secondsOneDisplay.fall();
		secondsTenDisplay.fall();
		minutesOneDisplay.fall();
		minutesTenDisplay.fall();
		hoursOneDisplay.fall();
		hoursTenDisplay.fall();
		daysOneDisplay.fall();
		daysTenDisplay.fall();
	}
}

