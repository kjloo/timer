import javax.swing.JFrame;

import net.miginfocom.swing.MigLayout;


public class Test {
	
	//Constants
	private static int width = 15;
	private static int height = 30;
		
	private static Segment segmentZero = new Segment();
	private static Segment segmentOne = new Segment();
	private static Segment segmentTwo = new Segment();
	private static Segment segmentThree = new Segment();
	private static Segment segmentFour = new Segment();
	private static Segment segmentFive = new Segment();
	private static Segment segmentSix = new Segment();
	
	public static void main(String[] args) {
		JFrame f = new JFrame();
		
		f.setVisible(true);
		f.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		f.setSize(600, 400);
		f.setLayout(new MigLayout("wrap 4", "[10] [10] [10] [10] []", "[10] [10] [10] [10] [10] [10]"));
		f.add(segmentZero, "cell 1 0 2 1, grow");
		f.add(segmentOne, "cell 3 1 1 2, grow");
		f.add(segmentTwo, "cell 3 4 1 2, grow");
		f.add(segmentThree, "cell 1 6 2 1, grow");
		f.add(segmentFour, "cell 0 4 1 2, grow");
		f.add(segmentFive, "cell 0 1 1 2, grow");
		f.add(segmentSix, "cell 1 3 2 1, grow");
	}

}
