import java.awt.GridLayout;

import javax.swing.JFrame;

import net.miginfocom.swing.MigLayout;


public class Test {
	
	//Constants
	private static int width = 15;
	private static int height = 30;
		
	private static Segment segmentZero = new Segment(0, 0, height, width);
	private static Segment segmentOne = new Segment(0, 0, width, height);
	private static Segment segmentTwo = new Segment(0, 0, width, height);
	private static Segment segmentThree = new Segment(0, 0, height, width);
	private static Segment segmentFour = new Segment(0, 0, width, height);
	private static Segment segmentFive = new Segment(0, 0, width, height);
	private static Segment segmentSix = new Segment(0, 0, height, width);
	
	public static void main(String[] args) {
		JFrame f = new JFrame();
		
		f.setVisible(true);
		f.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		f.setSize(600, 400);
		segmentZero = new Segment(100, 0, height, width);
		segmentOne = new Segment(0, 5, width, height);
		segmentTwo = new Segment(0, 10, width, height);
		segmentThree = new Segment(5, 20, height, width);
		segmentFour = new Segment(0, 0, width, height);
		segmentFive = new Segment(0, 0, width, height);
		segmentSix = new Segment(0, 0, height, width);
		
		f.setLayout(new GridLayout(0, 4));
		f.add(segmentZero);
		f.add(segmentOne);
		f.add(segmentTwo);
		f.add(segmentThree);
		f.add(segmentFour);
		f.add(segmentFive);
		f.add(segmentSix);
		System.out.println("Here");
	}

}
