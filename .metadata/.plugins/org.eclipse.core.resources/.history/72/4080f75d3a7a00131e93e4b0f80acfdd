import javax.swing.JFrame;

import net.miginfocom.swing.MigLayout;


public class Test {
	
	//Constants
	private static int width = 15;
	private static int height = 30;
		

	
	public static void main(String[] args) {
		JFrame f = new JFrame();
		
		Segment segmentZero = new Segment(10, 0, width, height);
		Segment segmentOne = new Segment(2, 0, height, width);
		
		f.setVisible(true);
		f.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		f.setSize(600, 400);
		f.add(segmentZero);
		f.add(segmentOne);
	}

}
